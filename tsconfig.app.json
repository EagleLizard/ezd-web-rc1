    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [ "ES2022", "DOM", "DOM.Iterable" ],
    "module": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,

    /* bundler mode */
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    // "allowImportingTsExtensions": true,
    // "verbatimModuleSyntax": true,
    // "moduleDetection": "force"

    "types": [
      "vite/client"
    ]
  },
